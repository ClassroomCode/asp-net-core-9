@model IEnumerable<Product>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                Category
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDiscontinued)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">
                    @item.ProductName
                </a>
            </td>
            <td>
                @(item.Category?.CategoryName ?? "None")
            </td>
            <td>
                @Html.DisplayFor(_ => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(_ => item.Package)
            </td>
            <td>
                @Html.DisplayFor(_ => item.IsDiscontinued)
            </td>
            <td>
                <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
